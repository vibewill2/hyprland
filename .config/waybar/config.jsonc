  "clock": {
    "format": "{:%d/%m/%Y %H:%M}",
    "tooltip-format": "<big>{:%A, %d de %B de %Y}</big>"
  },

  "pulseaudio": {
    "format": "{volume}% ï€¨"
  },

  "custom/mic": {
    "exec": "~/.config/waybar/scripts/mic-volume.sh",
    "interval": 5,
    "tooltip": "Microfone",
    "on-click": "pactl set-source-volume @DEFAULT_SOURCE@ +5%",
    "on-click-middle": "pactl set-source-volume @DEFAULT_SOURCE@ 0%",
    "on-click-right": "pactl set-source-volume @DEFAULT_SOURCE@ -5%"
  },

  "network": {
    "format-wifi": "ï‡« {essid}",
    "format-ethernet": "ïƒ {ipaddr}",
    "format-disconnected": "ï±"
  },

  "cpu": {
    "format": "ï‹› {usage}%",
    "tooltip": false
  },

  "memory": {
    "format": "ïƒ‰ {percentage}%",
    "tooltip": false
  },

  "custom/waybar-restart": {
    "format": "ï€",
    "on-click": "killall waybar && waybar &"
  },

  "custom/espaco": {
    "format": " "
  },

  "custom/powermenu": {
    "format": "â»",
    "tooltip": "Menu de Energia",
    "on-click": "~/.config/waybar/scripts/powermenu.sh"
  },

  "custom/color-toggle": {
    "exec": "echo '\uf1fc'",
    "interval": 0,
    "format": "{text}",
    "tooltip": "Muda cor da barra",
    "on-click": "~/.config/waybar/scripts/color_toggle.sh"
  },

  "custom/cava": {
    "exec": "~/.config/waybar/scripts/cava-waybar.sh",
    "format": "{}",
    "tooltip": "Visualizador de Ã¡udio CAVA",
    "restart-interval": 1
  },

  "custom/media-player": {
    "exec": "~/.config/waybar/scripts/media-player.sh",
    "format": "{}",
    "interval": 2,
    "tooltip": "Player de mÃºsica - Clique para abrir player",
    "on-click": "~/.config/waybar/scripts/media-player.sh open",
    "on-click-right": "playerctl next",
    "on-click-middle": "playerctl previous",
    "escape": true
  },

  "custom/background-apps": {
    "exec": "~/.config/waybar/scripts/background-apps.sh",
    "format": "{}",
    "interval": 5,
    "tooltip": true,
    "return-type": "json",
    "escape": true,
    "on-click": "~/.config/waybar/scripts/background-apps.sh click",
    "signal": 8
  },

  "custom/active-app": {
    "exec": "~/.config/waybar/scripts/active-app-icon.sh",
    "format": "{}",
    "interval": 1,
    "tooltip": true,
    "return-type": "json",
    "escape": true,
    "signal": 1
  }
}
