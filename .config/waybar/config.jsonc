    "memory",
    "custom/espaco",
    "custom/waybar-restart",
    "custom/espaco",
    "battery",
    "custom/espaco",
    "custom/powermenu",
    "custom/color-toggle"
  ],


  "hyprland/workspaces": {
    "format": "{id} {windows}",
    "format-window-separator": "",
    "window-rewrite-default": "",
